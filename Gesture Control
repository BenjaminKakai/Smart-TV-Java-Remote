import java.util.Scanner;

public class GestureControl {
  public static void main(String[] args) {
    Scanner sc = new Scanner(System.in);
    System.out.println("Enter a gesture:");
    String gesture = sc.nextLine();
    switch(gesture) {
      case "left":
        moveLeft();
        break;
      case "right":
        moveRight();
        break;
      case "up":
        moveUp();
        break;
      case "down":
        moveDown();
        break;
      case "select":
        selectOption();
        break;
      default:
        System.out.println("Gesture not recognized");
    }
  }

  private static void moveLeft() {
    System.out.println("Moving cursor to the left...");
  }

  private static void moveRight() {
    System.out.println("Moving cursor to the right...");
  }

  private static void moveUp() {
    System.out.println("Moving cursor up...");
  }

  private static void moveDown() {
    System.out.println("Moving cursor down...");
  }

  private static void selectOption() {
    System.out.println("Selecting option...");
  }
}
